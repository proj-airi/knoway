  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch gateway",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/main.go",
      "args": [
        "-config",
        "${workspaceFolder}/config/local.yaml",
      ]
    },
    {
      "name": "Launch gateway (static clusters only)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/main.go",
      "args": [
          "-config",
          "${workspaceFolder}/config/local.yaml",
          "--static-cluster-only",
      ]
    }
  ]
}
